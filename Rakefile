begin
  require "jeweler"
  Jeweler::Tasks.new do |gem|
    gem.name = "redhooks"
    gem.summary = "Define hooks in your classes. Based on the hook system of Redmine."
    gem.email = "support@enbilab.com"
    gem.authors = ["Carlo Miotto"]
    gem.files = Dir["{lib}/**/*", "{app}/**/*", "{config}/**/*"]
  end
  Jeweler::GemcutterTasks.new
rescue
  puts "Jeweler or dependency not available."
end

